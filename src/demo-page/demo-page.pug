include ../blocks/slider-config/slider-config

doctype html
html(lang="en")
   head
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      title EZ Range Slider Demo
   body 
      .demo-page
         h1.demo-page__title Range slider demo page
         .slider-container.demo-page__slider-container.ez-range-slider     
            .slider-container__range-slider
            +slider-config

         .slider-container.demo-page__slider-container.ez-range-slider(
            data-min = 0,
            data-max = 150,
            data-step = 2,
            data-from-current-value = 44,
            data-to-current-value = 100,
            data-show-bar = "false",
            data-is-range = "false",
            data-show-tip = "true",
            data-is-vertical = "false",
            data-show-scale = "false"
         )     
            .slider-container__range-slider
            +slider-config
         
         .slider-container.demo-page__slider-container.ez-range-slider     
            .slider-container__range-slider
      
      
      script(src="./index.ts") 