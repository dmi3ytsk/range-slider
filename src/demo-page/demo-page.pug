include ../blocks/slider-config/slider-config

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title EZ Range Slider Demo
    link(rel="apple-touch-icon" sizes="180x180" href="../favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="../favicons/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="../favicons/favicon-16x16.png")
    link(rel="mask-icon" href="../favicons/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
  body 
    .demo-page
      h1.demo-page__title Range slider demo page
      .slider-container.demo-page__slider-container.ez-range-slider.js-ez-range-slider      
        .slider-container__range-slider.js-slider-container__range-slider
        +slider-config

      .slider-container.demo-page__slider-container.ez-range-slider.js-ez-range-slider(
        data-min = -1,
        data-max = 2,
        data-step = 0.05,
        data-from-current-value = -1,
        data-to-current-value = 2,
        data-show-bar = "false",
        data-is-range = "true",
        data-show-tip = "true",
        data-is-vertical = "false",
        data-show-scale = "true"
      )     
        .slider-container__range-slider.js-slider-container__range-slider
        +slider-config

      .slider-container.demo-page__slider-container.ez-range-slider.js-ez-range-slider(
        data-min = -30,
        data-max = 30,
        data-step = 1,
        data-from-current-value = 0,
        data-to-current-value = 20,
        data-show-bar = "false",
        data-is-range = "false",
        data-show-tip = "true",
        data-is-vertical = "true",
        data-show-scale = "true"
      )     
        .slider-container__range-slider.js-slider-container__range-slider
        +slider-config



    script(src="./index.ts") 